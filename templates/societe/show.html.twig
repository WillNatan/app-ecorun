{% extends 'base.html.twig' %}

{% block title %}Société{% endblock %}

{% block body %}
    <h1>Société</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Logo</th>
            <td><img src="{{ asset('uploads/brochures/'~societe.logo) }}" width="100" height="100" alt="logo"></td>
        </tr>
            <tr>
                <th>Nom</th>
                <td>{{ societe.nom }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ societe.adresse }}</td>
            </tr>
            <tr>
                <th>Tel</th>
                <td>{{ societe.tel }}</td>
            </tr>
            <tr>
                <th>Fax</th>
                <td>{{ societe.fax }}</td>
            </tr>
            <tr>
                <th>URL Site Web</th>
                <td>{{ societe.siteWeb }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ societe.email }}</td>
            </tr>
        </tbody>
    </table>

    <div class="d-flex">
        <a href="{{ path('societe_index') }}" class="btn btn-primary"><i class="fa fa-arrow-left"></i></a>

        <a href="{{ path('societe_edit', {'id': societe.id}) }}" class="btn btn-warning ml-1"><i class="fa fa-edit text-light"></i></a>

        {{ include('societe/_delete_form.html.twig') }}
    </div>
{% endblock %}
