{% extends 'base.html.twig' %}

{% block title %}Bla index{% endblock %}

{% block body %}
    <h1>Bla index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for bla in blas %}
            <tr>
                <td>{{ bla.id }}</td>
                <td>{{ bla.name }}</td>
                <td>
                    <a href="{{ path('bla_show', {'id': bla.id}) }}">show</a>
                    <a href="{{ path('bla_edit', {'id': bla.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('bla_new') }}">Create new</a>
{% endblock %}
