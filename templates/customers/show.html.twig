{% extends 'base.html.twig' %}

{% block title %}Client{% endblock %}

{% block body %}
    <h1>Client</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Nom de la société ou client</th>
                <td>{{ customer.name }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ customer.address }}</td>
            </tr>
            <tr>
                <th>Numéro de téléphone</th>
                <td>{{ customer.tel }}</td>
            </tr>
            <tr>
                <th>Adresse Email</th>
                <td>{{ customer.email }}</td>
            </tr>
            <tr>
                <th>Code Postal</th>
                <td>{{ customer.postalcode }}</td>
            </tr>
            <tr>
                <th>Ville</th>
                <td>{{ customer.city }}</td>
            </tr>
        </tbody>
    </table>

    <div class="d-flex justify-content-center align-items-end">
        <a href="{{ path('customers_index') }}" class="btn btn-primary"><i class="fa fa-arrow-left"></i></a>

        <a href="{{ path('customers_edit', {'id': customer.id}) }}" class="btn btn-warning ml-1"><i class="fa fa-edit text-light"></i></a>

        {{ include('customers/_delete_form.html.twig') }}
    </div>
{% endblock %}
