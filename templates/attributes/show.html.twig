{% extends 'base.html.twig' %}

{% block title %}Attribut{% endblock %}

{% block body %}
    <h1>Attribut</h1>

    <table class="table">
        <tbody>

            <tr>
                <th>Nom de l'attribut</th>
                <td>{{ attribute.name }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ attribute.price }}</td>
            </tr>
        </tbody>
    </table>

    <div class="d-flex">
        <a href="{{ path('attributes_index') }}" class="btn btn-primary ml-1"><i class="fa fa-arrow-left "></i></a>

        <a href="{{ path('attributes_edit', {'id': attribute.id}) }}" class="btn btn-warning ml-1"><i class="fa fa-edit text-light"></i></a>

        {{ include('attributes/_delete_form.html.twig') }}
    </div>
{% endblock %}
